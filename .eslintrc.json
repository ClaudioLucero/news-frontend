{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "settings": {
    "react": {
      "version": "detect" // Esto detectará automáticamente la versión de React instalada
    }
  },
  "ignorePatterns": ["**/*.test.js", "**/*.test.jsx"], // Ignora archivos de prueba
  "rules": {
    // Puedes agregar reglas personalizadas aquí
  }
}
